<Page
    x:Class="EmlReader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Rectangle Stroke="{ThemeResource ApplicationForegroundThemeBrush}" StrokeDashArray="8" Margin="8"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <FontIcon Glyph="&#xE715;" FontSize="80"/>
            <TextBlock Text="Drop .eml/.msg here (PC only)" TextWrapping="Wrap"/>
            <TextBlock Text="or" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            <HyperlinkButton Content="Open File" HorizontalAlignment="Center" Click="FileOpenButton_Click"/>
        </StackPanel>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar x:Name="bottomCommandBar">
            <AppBarButton Label="About" Click="AboutButton_Click">
                <FontIcon Glyph="&#xE946;" />
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
    
</Page>
