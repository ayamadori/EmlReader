<Page
    x:Class="EmlReader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wsa="using:Windows.Storage.AccessCache"
    mc:Ignorable="d">
    
    <Grid AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <CommandBar x:Name="MailCommandBar" Grid.Row="0" DefaultLabelPosition="Right">
            <CommandBar.Content>
                <TextBlock Text="Recently opened" Style="{StaticResource TitleTextBlockStyle}" Margin="12,4,0,0"/>
            </CommandBar.Content>
            <AppBarButton x:Name="FileOpenButton" Label="Open" Icon="OpenFile" Click="FileOpenButton_Click"/>
            <AppBarButton x:Name="DonateButton" Icon="Like" Label="Donate" Click="DonateButton_Click"/>
            <AppBarButton Icon="More" ToolTipService.ToolTip="See more">
                <AppBarButton.Flyout>
                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                        <!--<MenuFlyoutItem x:Name="DonateButton" Text="Donate" Icon="Like" Click="DonateButton_Click"/>-->
                        <MenuFlyoutItem x:Name="AboutButton" Text="About" Click="AboutButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE946;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <!--<CommandBar.SecondaryCommands>
                <AppBarButton x:Name="DonateButton" Label="Donate" Icon="Like" Click="DonateButton_Click"/>
                <AppBarButton x:Name="AboutButton" Label="About" Click="AboutButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE946;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.SecondaryCommands>-->
        </CommandBar>

        <ListView x:Name="MruList" Grid.Row="1" Margin="12" ItemsSource="{x:Bind mruView}" Tapped="MruList_Tapped" BorderThickness="1" CornerRadius="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <!--https://stackoverflow.com/questions/43094395/how-to-stretch-listviewitem-in-listview/43114173-->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.Resources>
                <DataTemplate x:Key="MruListTemplate" x:DataType="wsa:AccessListEntry">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Margin="-4,8,4,8" Height="32" Source="Assets/ic_fluent_document_48_regular.png"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{x:Bind Metadata}" Margin="0,5,12,5" TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Column="2" x:Name="OpenWindowButton" Click="OpenWindowButton_Click" ToolTipService.ToolTip="Open in new window">
                            <Button.Content>
                                <FontIcon Glyph="&#xE2B4;" />
                            </Button.Content>
                        </Button>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Delete" Click="DeleteItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Cancel"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <StaticResource ResourceKey="MruListTemplate"/>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>

</Page>
